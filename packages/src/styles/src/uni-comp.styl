@import "./common/var"

.{$ns}-uni-comp
    background $-theme-color
    width 120px
    padding 10px 0
    border-radius 100px
    display flex
    align-items center
    justify-content center

    .count
        color #fff
        font-weight bold
        font-size 16px
        width 30px
        margin-right 4px

    .add-button
        border-radius 100px
        background #fff
        border 1px solid #fff
        padding 2px 10px
        font-size 12px
        cursor pointer
